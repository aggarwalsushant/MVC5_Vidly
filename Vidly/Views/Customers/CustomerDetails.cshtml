@model VidlyModels.Models.Customer

@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p></p>
@{
    if (Model != null)
    {
        <h2>@Model.Name</h2>
        <ul>
            <li>Membership Type: @Model.MembershipType.Name</li>
            @if (Model.BirthDate!=null)
            {
                <li>Birth Date: @Model.BirthDate.Value.ToShortDateString()</li>
            }
        </ul>
    }
    else
    {
        <h2>Customer not found in database. Please check again</h2>
    }
}
