@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#customers").DataTable({
                ajax: {
                    url: "http://localhost:12345/api/customers/",
                    dataSrc:""
                },
                columns: [
                    {
                        data: "name", // property of the customer object we need to access to show
                        render: function (data, type, customer) {
                            //console.log(JSON.stringify(customer, null, 4)); // shows the data of the customer returned from API
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";

                        }
                    },
                    {
                        data: "membershipType", // property of the customer object we need to access to show
                        render: function (data, type, customer) {
                            return data.name;

                        }
                    },
                    {
                        data: "id", // property of the customer object we need to access to show
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";

                        }
                    }

                ]
            });


            $("#customers .js-delete").on("click", function () {
                var button = $(this);

                if (confirm("Are you sure you want to delete this customer?")) {
                    $.ajax({
                        url: "http://localhost:12345/api/customers/remove/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        //crossDomain: true,
                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                            //button.parents("tr").remove();
                        },
                        failure: function () {
                            console.log("failed");
                        }
                    });
                }
            });

        });
    </script>
}