@model IEnumerable<VidlyModels.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
<table class="table	table-bordered	table-hover">

    @if (Model.Count() > 0)
    {
    <tr>
        <th>Customer</th>
        <th>Membership Type</th>
    </tr>
        foreach (var customer in Model)
        {
    <tr>
        <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { customer.Id }, null)</td>
        @*<td>@Ajax.ActionLink(customer.Name, "Edit", "Customers", new { customer.Id } ,new AjaxOptions { HttpMethod = "Put" })</td>*@

        <td>@customer.MembershipType.Name</td>
    </tr>
        }

    }
    else
    {
        <tr><td>No customers have been added yet.</td></tr>
    }
</table>
