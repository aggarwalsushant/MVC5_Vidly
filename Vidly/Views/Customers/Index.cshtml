@model IEnumerable<VidlyModels.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
<table class="table	table-bordered	table-hover">

    @if (Model.Count() > 0)
    {
    <tr>
        <th>Customer</th>
        <th>Discount Rate</th>
    </tr>
        foreach (var item in Model)
        {
    <tr>
        <td>@Html.ActionLink(item.Name, "Details", "Customers", new { item.Id }, null)</td>
        <td>@item.MembershipType.Name</td>
    </tr>
        }

    }
    else
    {
        <tr><td>No customers have been added yet.</td></tr>
    }
</table>
