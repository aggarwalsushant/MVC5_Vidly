@model IEnumerable<VidlyModels.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p></p>
<h1>Movies</h1>

<p>@Html.ActionLink("New Movie", "SaveMovie", "Movies", null, new { @class = "btn btn-primary" })</p>

<table class="table	table-bordered	table-hover">

    @if (Model.Count() > 0)
    {
        <tr><th>Movie</th><th>Genre</th></tr>
        foreach (var item in Model)
        {
            <tr><td>@Html.ActionLink(item.Name, "Edit", "Movies", new { item.Id }, null)</td><td>@item.CategoryDetails.CategoryName</td></tr>
        }
    }
    else
    {
        <tr><td>No movies have been added yet.</td></tr>
    }
</table>