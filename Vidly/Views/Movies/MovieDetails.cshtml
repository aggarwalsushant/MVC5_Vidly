@model VidlyModels.Models.Movie

@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p></p>
@{
    if (Model != null)
    {
        <h2>@Model.Name</h2>
        <ul>
            <li>Genre: @Model.CategoryDetails.CategoryName</li>
            <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
            <li>Date Added: @Model.DateAdded.ToShortDateString()</li>
            <li>Number in stock: @Model.NumberInStock</li>
        </ul>
    }
    else
    {
        <h2>Movie not found in database. Please check again</h2>
    }
}


